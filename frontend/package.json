{
    "name": "client",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "NODE_ENV=development next",
        "build": "next build",
        "start": "NODE_ENV=production next start",
        "test": "jest --coverage --bail",
        "lint": "stylelint './**/*.css' & xo",
        "fix": "xo --fix & stylelint './**/*.css' --fix",
        "deploy": "now",
        "alias": "now alias"
    },
    "dependencies": {
        "next": "^9.3.2",
        "react": "^16.7.0",
        "react-dom": "^16.7.0"
    },
    "devDependencies": {
        "@zeit/next-css": "^1.0.1",
        "babel-eslint": "^10.0.1",
        "cssnano": "^4.1.8",
        "eslint-config-amphibian": "^1.1.3",
        "eslint-config-xo-react": "^0.18.0",
        "eslint-plugin-react": "^7.12.4",
        "jest": "^24.0.0",
        "postcss-preset-env": "^6.5.0",
        "stylelint": "^9.10.1",
        "stylelint-config-amphibian": "^1.0.3",
        "xo": "^0.24.0"
    },
    "xo": {
        "parser": "babel-eslint",
        "extends": [
            "eslint-config-amphibian",
            "eslint-config-xo-react"
        ],
        "overrides": [
            {
                "files": "__tests__/**/*.js",
                "globals": [
                    "test",
                    "expect"
                ]
            }
        ]
    },
    "stylelint": {
        "extends": [
            "stylelint-config-amphibian"
        ],
        "ignoreFiles": [
            "./coverage/**/*",
            "./.next/**/*",
            "./node_modules/**/*"
        ]
    }
}
